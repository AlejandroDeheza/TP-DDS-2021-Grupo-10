                    <div class="col">
                        <div class="form-group">
                        <textarea maxlength="200" name="estadoMascota"
                                  placeholder="Descripcion del estado de la mascota"
                                  class="form-control" id="descripcion"
                                  rows="3"></textarea>
                        </div>
                    </div>
                </div>
