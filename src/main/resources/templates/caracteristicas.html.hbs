{{# partial "titulo" }}
<title>Patitas - Caracteristicas</title>
{{/partial}}


{{# partial "contenido" }}
<div class="d-flex flex-column align-items-center pt-3 centrando-cosas">

	<h1 class="pb-3">Caracteristicas</h1>

	{{#caracteristicas}}
	<div class="accordion accordion-flush caracteristica mb-3" id="accordionFlushCaracteristica{{id}}">
		<div class="accordion-item">
			<h2 class="accordion-header" id="flush-caracteristica{{id}}">
				<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
					data-bs-target="#flush-collapseCaracteristica{{id}}" aria-expanded="false"
					aria-controls="flush-collapseCaracteristica{{id}}">
					<h4>{{caracteristicaConValoresPosibles.nombreCaracteristica}}</h4>
				</button>
			</h2>
			<div id="flush-collapseCaracteristica{{id}}" class="accordion-collapse collapse"
				aria-labelledby="flush-caracteristica{{id}}" data-bs-parent="#accordionFlushCaracteristica{{id}}">
				<div class="accordion-body">
					<ul>
						{{#caracteristicaConValoresPosibles.valoresCaracteristicas}}
						<p>
					        <h5>* {{this}}</h5>
						</p>
						{{/caracteristicaConValoresPosibles.valoresCaracteristicas}}
					</ul>
				</div>
			</div>
		</div>
	</div>
	{{/caracteristicas}}

	<div class="agregar-caracteristica my-4">
		<a class="btn btn-primary submit-button-error" href="/caracteristicas/nueva">
			Agregar caracter√≠stica
		</a>
	</div>
</div>
{{/partial}}


