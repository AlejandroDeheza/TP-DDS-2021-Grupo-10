    <script type="text/javascript">
        $(function () {
            $('#datepicker').datepicker(
                    {
                        format: "dd/mm/yyyy"
                    }
            );
        });

        // Muestro un preview de la foto que se suba
        const imageTag = $('#img-mascota');

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    imageTag.attr('src', e.target.result);
                }
                //transforma el archivo a b64
                reader.readAsDataURL(input.files[0]);
            }
        }

        // agregando al event listener on-change del input
        $("#foto-mascota").change(function () {
            readURL(this);
            imageTag.css('display', 'block')
        });


        function onFormSubmit() {
            console.log('ejecutando esto:');
            sessionStorage.setItem("mascota_registrada", true);
        }
    </script>
    <script type="text/javascript">
        $("#encontreForm").submit(
                async function (event) {
                    event.preventDefault();

                    let ubicacionRescatista = document.getElementById('ubicacionRescatista').value;
                    let ubicacionRescate = document.getElementById('ubicacionRescate').value;
                    let latLngRescatista;
                    let latLngRescate;

                    latLngRescatista = await obtenerLatitudLongitud(ubicacionRescatista);
                    latLngRescate = await obtenerLatitudLongitud(ubicacionRescate);


                    let form = $("#encontreForm");
                    let path = form.attr("action");
                    let fechaRescate = form.find("[name='fechaRescate']").val();
                    let estadoMascota = form.find("[name='estadoMascota']").val();
                    let codigoChapita = form.find("[name='codigoChapita']").val();
                    let fotoMascota = form.find("[name='fotoMascota']").val();
                    let url = "http://localhost:8080" + path;
                    let latitudRescatista = latLngRescatista.latitud
                    let longitudRescatista = latLngRescatista.longitud

                    let latitudRescate = latLngRescate.latitud
                    let longitudRescate = latLngRescate.longitud
                    console.log(latitudRescate, longitudRescate, latitudRescatista, longitudRescatista)
                    let body = {
                        ubicacionRescatista,
                        ubicacionRescate,
                        fechaRescate,
                        estadoMascota,
                        codigoChapita,
                        fotoMascota,
                        latitudRescatista,
                        longitudRescatista,
                        latitudRescate,
                        longitudRescate
                    }
                    console.log(body)
                    $.post(url, body);
                }
        )

        const obtenerLatitudLongitud = async (ubicacion) => {
                    const geocoder = new google.maps.Geocoder();
                    const response = await geocoder.geocode({'address': ubicacion});

                    latitud = response.results[0].geometry.location.lat();
                    longitud = response.results[0].geometry.location.lng();

                    return {
                        latitud, longitud
                    }
                }

        ;
    </script>
