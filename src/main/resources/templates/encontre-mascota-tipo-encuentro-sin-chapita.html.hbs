{{# partial "titulo" }}
    <title>Patitas - Encontre una Mascota sin chapita</title>
{{/partial}}

{{# partial "contenido" }}
    <section class="fondo-gris">
             <h2>Para avisarnos sobre la mascota rescatada, por favor primero completa tus datos personales.n</h2>

             <form class="encontre-mascota"
             action="/mascotas/encontre-mascota/lugar-encuentro/tipo-encuentro/sin-chapita"
             method="POST">
                 <div class="campo">
                     <span class="nombre-campo">Tipo Animal:</span>
                     <select name="tipoDocumento">
                     {{#each tipoAnimales}}
                         <option value="{{this}}">{{this}}</option>
                     {{/each}}
                     </select>
                 </div>
                 <div class="campo">
                     <span class="nombre-campo">Tama√±o:</span>
                     <select name="tamanioMascota">
                         {{#each tamanioMascota}}
                             <option value="{{this}}">{{this}}</option>
                         {{/each}}
                     </select>
                 </div>
                 <h2>Caracteristicas</h2>
                 <div class="campo">
                     <span class="nombre-campo">Color:</span><input
                     type="color" required="required" name="color"
                     placeholder="Ingrese color">
                 </div>
                {{#each listaCaracteristicasValoresPosibles}}
                  <div class="campo">
                   <span class="nombre-campo">{{nombreCaracteristica}}</span>
                      <select name="valoresCaracteristicas">
                          {{#each valoresCaracteristicas}}
                              <option value="{{this}}">{{this}}</option>
                          {{/each}}
                      </select>
                   </div>
                 {{/each}}
                 <input type="submit" value="Enviar">
             </form>
    </section>
{{/partial}}

{{> layout.html.hbs }}
